---
import { skillGroups } from "../consts";
import LeftSection from "./LeftSection.astro";
import CodingBracketsLaptopIcon from "./icons/CodingBracketsLaptopIcon.astro";
---

<LeftSection title="SKILLS">
	<CodingBracketsLaptopIcon slot="icon" />
	<ul>
		{skillGroups.map(([skillGroupName, skills]) => 
		<li class="leading-normal mb-2">
			<span class="font-medium">{skillGroupName}:</span>
			{skills.map(skill => <span class="badge badge-outline mx-1">{skill.name}</span>)}
		</li>
		)}
	</ul>
</LeftSection>
